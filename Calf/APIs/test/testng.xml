<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="tests" thread-count="4">
    
    <listeners>
        <listener class-name="com.yourcompany.api.listeners.TestNGListener"/>
    </listeners>
    
    <test name="User API Tests" parallel="methods" thread-count="3">
        <classes>
            <class name="com.yourcompany.api.runners.APITestRunner"/>
        </classes>
    </test>
    
    <test name="Product API Tests" parallel="methods" thread-count="3">
        <classes>
            <class name="com.yourcompany.api.runners.ProductTestRunner"/>
        </classes>
    </test>
    
</suite>